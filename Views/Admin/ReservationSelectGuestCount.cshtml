@{
    ViewData["Title"] = "Select Guest Count";
}

<h1>Select Guest Count</h1>

<form asp-action="ReservationSelectGuestCount" method="post">
    <div class="form-group">
        <label>Guest Count</label>
        <input type="number" name="guestCount" class="form-control" min="1" max="100" required />
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>
