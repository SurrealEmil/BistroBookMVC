@model List<Menu>

<h2 class="display-3">Menu</h2>

<a asp-action="MenuCreate" asp-controller="Admin" class="btn btn-outline-primary" style="margin-bottom: 1rem;">Create Menu Item</a>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" style="max-width: 600px;">
        @ViewBag.ErrorMessage
    </div>
}

<table class="table" style="border: 1px solid gray">
    <thead>
        <tr>
            <th scope="col">Dish</th>
            <th scope="col">Id</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Is Favorite</th>
            <th scope="col">Is Available</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dish in Model)
        {
            <tr class="table-secondary">
                <td>@dish.DishName</td>
                <td>@dish.Id</td>
                <td>@dish.Description</td>
                <td>@dish.Price :-</td>
                <td>
                    @if (dish.IsFavorite)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    @if (dish.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Unavailable</span>
                    }
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="MenuEdit" asp-route-id="@dish.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" asp-action="Delete" style="display:inline;">
                        <input type="hidden" name="id" value="@dish.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

