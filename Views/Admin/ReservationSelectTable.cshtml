<h1>Select Table</h1>

<form asp-action="ReservationSelectTable" method="post">
    <div class="form-group">
        <label>Available Tables</label>
        <select name="tableId" class="form-control" required>
            @foreach (var table in ViewBag.AvailableTables)
            {
                <option value="@table.Id">@table.TableNumber - Capacity: @table.SeatCount</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>
