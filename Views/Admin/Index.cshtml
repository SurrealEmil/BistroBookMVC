<main class="container mt-4">
    <h2 class="text-center display-3 mb-5">Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-dark shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">All Reservations</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">Manage, view, and modify all reservations from this section.</p>
                    <a asp-controller="Admin" asp-action="ReservationAll" class="btn btn-outline-primary">View All Reservations</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-dark shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Menu Management</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">View, update, and manage the menu items here.</p>
                    <a asp-controller="Admin" asp-action="Menu" class="btn btn-outline-primary">View Menu</a>
                </div>
            </div>
        </div>
    </div>
</main>

