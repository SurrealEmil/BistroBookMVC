<div class="container">
    <h2 class="display-3 text-center mb-4">Reservations</h2>

    <div class="d-flex justify-content-center mb-3">
        <a asp-action="ReservationCreate" asp-controller="Admin" class="btn btn-outline-primary">Create Reservation</a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger text-center" style="max-width: 600px; margin: 0 auto;">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="row">
        @foreach (var res in Model)
        {
            <div class="col-12 mb-4">
                <div class="card border-secondary shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex flex-row flex-wrap mb-3">
                            <!-- Consistent width for all labels -->
                            <div class="me-3" style="min-width: 200px;">
                                <h5 class="card-title">@res.CustomerFullName</h5>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Customer ID: @res.CustomerId</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Table Number: @res.TableNumber</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Table ID: @res.TableId</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Date: @res.Date.ToString("yyyy-MM-dd")</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Start Time: @res.StartTime</p>
                            </div>
                            <div class="me-3 flex-grow-1" style="min-width: 150px;">
                                <p class="card-text">End Time: @res.EndTime</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-auto">
                            <div class="d-flex">
                                <a asp-controller="Admin" asp-action="ReservationEdit" asp-route-id="@res.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                                <form method="post" asp-controller="Admin" asp-action="ResDelete" style="display:inline;">
                                    <input type="hidden" name="id" value="@res.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
