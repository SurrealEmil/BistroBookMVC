@model List<Menu>

<div class="container text-center menu-page py-5">
    <!-- Restaurant Title -->
    <h1 class="display-4 fw-bold text-uppercase">BistroBook</h1>

    <!-- Section Heading -->
    <h2 class="display-6 mb-5 text-muted">Our Exquisite Menu</h2>

    <!-- Menu Items -->
    <div class="menu-container mt-4">
        @foreach (var dish in Model)
        {
            <div class="menu-item mb-4">
                <h5 class="card-title">@dish.DishName</h5>
                <p class="card-text">@dish.Description</p>
                <p class="card-text">@dish.Price :-</p>
            </div>
        }
    </div>
</div>



