@{
    // Check if IsLandingPage is set in ViewData, otherwise set it to false
    var IsLandingPage = ViewData["IsLandingPage"] as bool? ?? false;
    var pageClass = IsLandingPage ? "landing-page" : "";
    var landingPagePaddingClass = IsLandingPage ? "pt-0 ps-0 p-0 pb-5" : "pb-5 pt-5";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delicious Cuisine and Reservations - BistroBookMVC</title>
    <meta name="description" content="BistroBook is your favorite dining experience offering a selection of popular dishes crafted from seasonal ingredients." />
    <meta name="keywords" content="restaurant, dining, BistroBook, popular dishes, culinary experience" />
    <meta name="author" content="Emil Ejderklev" />
    <meta name="description" content="BistroBookMVC offers a delightful dining experience with a diverse menu and easy online reservations. Join us for a meal!">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BistroBookMVC.styles.css" asp-append-version="true" />
    <meta property="og:title" content="BistroBook - Delicious Cuisine and Reservations" />
    <meta property="og:description" content="Join us at BistroBook for a delightful dining experience." />
</head>
<body class="@pageClass">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm py-3">
            <!-- Updated to navbar-dark and bg-dark -->
            <div class="container-fluid">
                <a class="navbar-brand text-light" style="font-family: 'Merriweather', serif; font-weight: 700;" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-utensils"></i> BistroBook
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold px-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a> <!-- Updated to text-light -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold px-3" asp-area="" asp-controller="Menu" asp-action="Index">Menu</a> <!-- Updated to text-light -->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold px-3" href="http://localhost:5173" target="_blank">Reservation</a> <!-- Updated to text-light -->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid flex-grow-1 @landingPagePaddingClass">
        <main role="main" class="flex-grow-1 pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-dark py-4">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="footer-left text-light">
                &copy; 2024 - <strong>BistroBookMVC</strong>
                <a asp-area="" asp-controller="Admin" asp-action="Index" class="text-decoration-none ms-2 text-light">Admin</a>
            </div>
            <div class="footer-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <form asp-controller="Account" asp-action="Login" method="get" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">Login</button> <!-- Changed to outline-light -->
                    </form>
                }
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
